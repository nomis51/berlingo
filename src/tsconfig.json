{
  "exclude": [
    "public/**/*"
  ],
  "include": [
    "./**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
